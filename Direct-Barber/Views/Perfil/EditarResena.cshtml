@model Direct_Barber.Models.Resena
<link rel="stylesheet" href="~/css/ediResena.css" />
    
<div class="resena-container">
    <h2>Editar Reseña</h2>
    <form asp-action="EditarResena" asp-controller="Perfil" method="post">
        <input type="hidden" name="id" value="@Model.Id" />

        <label for="contenido">Contenido de la reseña:</label>
        <textarea id="contenido" name="contenido" required>@Model.Contenido</textarea>

        <label for="calificacion">Calificación:</label>
        <input type="number" id="calificacion" name="calificacion" value="@Model.Calificacion" min="1" max="5" required />

        <button type="submit">Guardar cambios</button>
    </form>
</div>