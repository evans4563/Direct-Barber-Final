@{
    ViewBag.Title = "Restablecer Contraseña";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="text-center">Restablecer Contraseña</h2>
                    <p class="text-center text-muted">Por favor ingresa tu nueva contraseña.</p>

                    <form asp-action="ResetPassword">
                        <input type="hidden" name="userId" value="@Model.UserId" />
                        <input type="hidden" name="token" value="@Model.Token" />

                        <div class="form-group">
                            <label for="Password">Nueva Contraseña</label>
                            <input type="password" class="form-control" id="Password" name="Password" placeholder="••••••••" required />
                        </div>

                        <div class="form-group">
                            <label for="ConfirmPassword">Confirmar Contraseña</label>
                            <input type="password" class="form-control" id="ConfirmPassword" name="ConfirmPassword" placeholder="••••••••" required />
                        </div>

                        <button type="submit" class="btn btn-primary btn-block mt-3">Restablecer Contraseña</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>