@{
    ViewData["Title"] = "Contáctanos";
}

<div class="container contact-container" style="padding: 50px;">
    <h2 class="text-center contact-title">Ponte en Contacto</h2>
    <p class="text-center contact-subtitle">Reserva tu cita o contáctanos para más información.</p>

    <section class="contact-info my-5">
        <h3 class="text-center">Información de Contacto</h3>
        <div class="row justify-content-center">
            <div class="col-md-4 text-center contact-item">
                <div class="icon-circle mb-3">
                    <i class="fas fa-map-marker-alt fa-2x" aria-hidden="true"></i>
                </div>
                <h5>Ubicación</h5>
                <p>Servicio 100% virtual</p>
            </div>
            <div class="col-md-4 text-center contact-item">
                <div class="icon-circle mb-3">
                    <i class="fas fa-phone-alt fa-2x" aria-hidden="true"></i>
                </div>
                <h5>Teléfono</h5>
                <p>(+123) 456 7890</p>
            </div>
            <div class="col-md-4 text-center contact-item">
                <div class="icon-circle mb-3">
                    <i class="fas fa-envelope fa-2x" aria-hidden="true"></i>
                </div>
                <h5>Correo Electrónico</h5>
                <p>info@barberiaestilo.com</p>
            </div>
        </div>
    </section>

    <section class="social-media-container my-5">
        <h3 class="text-center">Síguenos en nuestras redes sociales</h3>
        <div class="d-flex justify-content-center">
            <a href="javascript:void(0);" class="social-link mx-3">
                <i class="fab fa-instagram fa-2x" aria-hidden="true"></i>
            </a>
            <a href="javascript:void(0);" class="social-link mx-3">
                <i class="fab fa-facebook fa-2x" aria-hidden="true"></i>
            </a>
            <a href="javascript:void(0);" class="social-link mx-3">
                <i class="fab fa-whatsapp fa-2x" aria-hidden="true"></i>
            </a>
        </div>
    </section>

    <section class="testimonials-container my-5">
        <h3 class="text-center">Lo que dicen nuestros clientes</h3>
        <div class="row">
            <div class="col-md-4 text-center">
                <blockquote>"El mejor servicio de barbería a domicilio que he probado, muy profesional y atentos."</blockquote>
                <p>- Sebastian</p>
            </div>
            <div class="col-md-4 text-center">
                <blockquote>"Rapidez y calidad en el servicio. Lo recomiendo al 100%."</blockquote>
                <p>- Samuel</p>
            </div>
            <div class="col-md-4 text-center">
                <blockquote>"Excelente atención, me encantó el resultado final."</blockquote>
                <p>- Valentino</p>
            </div>
        </div>
    </section>

    <!-- Formulario de Contacto -->
    <section class="contact-form my-5">
        <h3 class="text-center">Envíanos un mensaje</h3>
        <form class="mx-auto" style="max-width: 600px;">
            <div class="form-group">
                <label for="name">Nombre</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Tu nombre">
            </div>
            <div class="form-group">
                <label for="email">Correo Electrónico</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="Tu correo electrónico">
            </div>
            <div class="form-group">
                <label for="message">Mensaje</label>
                <textarea class="form-control" id="message" name="message" rows="5" placeholder="Escribe tu mensaje aquí..."></textarea>
            </div>
            <button type="submit" class="btn btn-primary btn-lg w-100">Enviar Mensaje</button>
        </form>
    </section>
</div>
