@model IEnumerable<Direct_Barber.Models.TipoSer>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="card col-4 text-center" style="background-color: whitesmoke;">
        <h1 style="color: black; font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;">Servicios Disponibles</h1>
    </div>
</div>

<div class="row justify-content-center mt-4">
    @foreach (var item in Model)
    {
        <div class="col-8 mb-4 mx-auto">
            <div class="card">
                <img src="~/images/@item.Foto" class="card-img-top" alt="@item.Nombre" style="object-fit: cover; height: 200px; width: auto; max-width: 100%;">

                <div class="card-body text-center">
                    <h5 class="card-title">@item.Nombre</h5>
                    <p class="card-text">Precio: $@item.Precio</p>
                    <a asp-controller="Solicituds" asp-action="Create" asp-route-tipoServicioId="@item.Id" asp-route-precioServicio="@item.Precio" asp-route-nombreServicio="@item.Nombre" class="btn btn-success">Seleccionar servicio</a>



                </div>
            </div>
        </div>
    }
</div>
